<% if action == :edit %>
  <% action_url = cat_url(cat) %>
<% else %>
  <% action_url = cats_url %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input type="text" name="cat[name]" value="<%= action == :edit ? cat.name : "" %>">
  <br>

  <label for="birth_date">DoB</label>
  <input type="date" name="cat[birth_date]" value="<%= action == :edit ? cat.birth_date : "" %>"/>
  <br>

  <label for="color">Color</label>
  <select name="cat[color]">
    <option disabled <%= cat.color ? "selected" : "" %>>--cat coat color--</option>
    <% Cat.colors.each do |color| %>
    <option value="<%=color%>" <%= cat.color == color ? "selected" : "" %>> <%= color %></option>
    <% end %>
  </select>
  <br>

  <label for="sex">Sex</label>
  <input type="radio" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>/>
  <label>F</label>
  <input type="radio" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>/>
  <label>M</label>
  <input type="radio" name="cat[sex]" value="O" <%= cat.sex == "F" ? "checked" : "" %>/>
  <label>O</label>
  <br>

  <label for="description">Description</label>
  <textarea name="cat[description]"><%= cat.description %></textarea>
  <br>

  <input type="submit" value="<%= (action == :edit) ? "make cat mo bettah" : "Add cat to dee beee" %>"/>
</form>
